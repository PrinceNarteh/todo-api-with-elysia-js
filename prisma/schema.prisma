generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String
  middleName String?
  email      String
  todos      Todo[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

model Todo {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text()
  completed   Boolean   @default(false)
  dueDate     DateTime?
  priority    Priority  @default(MEDIUM)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?

  @@index([userId])
  @@index([completed])
  @@index([dueDate])
  @@map("todos")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
